package Database;

public class Osoby 
{
	private String Meno;
	private int Rok_nar;
	public int Uvaz;
	public static int Max_uvaz = 1;
	
	Osoby(String meno, int rok_nar)
	{
		this.Meno = meno;
		this.Rok_nar = rok_nar;
	}

	public String getMeno() {
		return Meno;
	}

	public int getRok_nar() {
		return Rok_nar;
	}
	
	public int getUvaz() {
		return Uvaz;
	}
	
	public int getMax_uvaz() {
		return Max_uvaz;
	}
	
	public static int setMax_uvaz(int max_uvaz)
	{
		return Max_uvaz = max_uvaz;
	}
	
	public boolean checkNewUvaz(int novy_uvaz)
	{
		if((Uvaz + novy_uvaz) < Max_uvaz)
		{
			Uvaz += novy_uvaz;
			return true;
		}
		return false;
	}
	
}
